<form asp-action="Login" method="post">
    <dl>
        <dt>Username:</dt>
        <dd><input type="text" asp-for="Username" size="30"></dd>
        <dt>Password:</dt>
        <dd><input type="password" asp-for="Password" size="30"></dd>
    </dl>
    <div class="actions"><input type="submit" value="Sign In"></div>
</form>
